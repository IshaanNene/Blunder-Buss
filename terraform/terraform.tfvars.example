# Project Configuration
project_name = "blunder-buss-platform"
environment  = "dev"

# GCP Configuration
gcp_project_id = "your-gcp-project-id"
gcp_region     = "us-central1"
gcp_zone       = "us-central1-a"

# VPC Configuration
private_subnet_cidr = "10.0.1.0/24"
public_subnet_cidr  = "10.0.101.0/24"
pod_subnet_cidr     = "10.1.0.0/16"
service_subnet_cidr = "10.2.0.0/16"

# GKE Configuration
cluster_name            = "blunder-buss-platform-gke"
kubernetes_version      = "1.28"
node_instance_type      = "e2-medium"
node_group_min_size     = 1
node_group_max_size     = 10
node_group_desired_size = 2

# Redis Configuration (Memorystore)
redis_tier           = "BASIC"
redis_memory_size_gb = 1